<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2pt"
    android:padding="1pt"
    android:background="@color/mainBackgroundColor">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/itemBranchNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/branch_name"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>



        <TextView
            android:id="@+id/itemBranchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/itemBranchQueueNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="User Name"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/itemBranchQueueNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/itemBranchEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Company_email"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>



        <TextView
            android:id="@+id/itemBranchEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="2pt"
            android:layout_marginVertical="1pt"
            android:textColor="@color/white"/>

    </LinearLayout>
</LinearLayout>
